# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

GET		/posts/{id}                            Application.show
POST    /posts/{postId}/comments                Application.postComment
GET     /posts/{postId}/comments                Application.logout

GET      /profile                               Profiles.show


# Administration
GET     /admin/?                                Admin.index
*       /admin                                  module:crud

GET      /quiz/search                           Quizzes.search
GET      /quiz/new                              Quizzes.create
POST     /quiz/new                              Quizzes.storeQuiz
GET      /quiz/show/{questionId}                Quizzes.show

*        /question/search                       Questions.search
GET      /question/new                          Questions.create
POST     /question/new                          Questions.storeQuestion
GET      /question/show/{questionId}            Questions.show

GET      /exam/search                           Exams.search
GET      /exam/new                              Exams.create
POST     /exam/new/step1                        Exams.createFirstStep
POST     /exam/new/step2                        Exams.searchQuiz
GET      /exam/{examKey}                        Exams.go
GET      /exam/{examKey}/start                  Exams.beginQuiz

# Catch all
*       /{controller}/{action}                  {controller}.{action}
